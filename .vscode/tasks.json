{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ca65: Compile and Link Current File",
            "command": "./cc65/bin/cl65",
            "type": "shell",
            "args": [
                "-o",
                "./tests/roms/${fileBasenameNoExtension}",
                "'${file}'"
            ],
            "problemMatcher": [
                "$ca65",
                "$ld65",
                "$ld65-config",
                "$ld65-unresolved"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "label": "npm: build",
            "detail": "tsc"
        }
    ]
}